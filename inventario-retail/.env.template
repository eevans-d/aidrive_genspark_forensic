# ==========================================
# CONFIGURACIÓN SISTEMA MULTI-AGENTE RETAIL ARGENTINO
# Copiar a .env y ajustar valores según entorno
# ==========================================

# === BASE DE DATOS ===
DATABASE_URL=sqlite:///./data/inventario.db?check_same_thread=false
DATABASE_ECHO=false

# === SEGURIDAD Y JWT ===
JWT_SECRET=inventario-retail-jwt-secret-CAMBIAR-EN-PRODUCCION
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# === PUERTOS DE SERVICIOS ===
AGENTE_NEGOCIO_PORT=8001
AGENTE_DEPOSITO_PORT=8002
MONITOR_PORT=8003

# === URLS DE SERVICIOS ===
AGENTE_NEGOCIO_URL=http://localhost:8001
AGENTE_DEPOSITO_URL=http://localhost:8002

# === CONTEXTO ARGENTINO - INFLACIÓN ===
# Inflación mensual en porcentaje (ejemplo: 4.5 = 4.5% mensual)
INFLACION_MENSUAL=4.5
INFLACION_ANUAL_MAX=150.0

# === CONTEXTO ARGENTINO - TEMPORADAS ===
# Temporada actual: verano, invierno, otoño, primavera
TEMPORADA=verano

# Factores estacionales para stock mínimo
FACTOR_STOCK_VERANO=1.3
FACTOR_STOCK_INVIERNO=0.8
FACTOR_STOCK_OTOÑO=1.0
FACTOR_STOCK_PRIMAVERA=1.1

# === OCR Y PROCESAMIENTO ===
OCR_CONFIDENCE_MIN=0.6
OCR_CACHE_TTL_HOURS=24
OCR_MAX_IMAGE_SIZE_MB=10

# === RESILIENCIA ===
HTTP_TIMEOUT_SECONDS=30
HTTP_RETRY_MAX=3
HTTP_RETRY_BACKOFF=1.5
CIRCUIT_BREAKER_FAILURE_THRESHOLD=5
CIRCUIT_BREAKER_TIMEOUT_SECONDS=60

# === OUTBOX PATTERN ===
OUTBOX_WORKER_INTERVAL_SECONDS=30
OUTBOX_MAX_RETRIES=5
OUTBOX_RETENTION_DAYS=7

# === MONITORING Y ALERTAS ===
HEALTH_CHECK_INTERVAL_SECONDS=30
HEALTH_CHECK_TIMEOUT_SECONDS=90

# === TELEGRAM BOT (OPCIONAL) ===
# Obtener token en @BotFather
TELEGRAM_BOT_TOKEN=
# ID del chat (usar @userinfobot para obtener)
TELEGRAM_CHAT_ID=
# Habilitar alertas Telegram
TELEGRAM_ALERTAS_ENABLED=false

# === BACKUP ===
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=./backups
# Cron para backup automático (2 AM diario)
BACKUP_SCHEDULE_CRON=0 2 * * *

# === LOGS ===
# Nivel: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO
# Formato: json, text
LOG_FORMAT=json
LOG_ROTATION_SIZE=100MB
LOG_RETENTION_DAYS=30

# === PERFORMANCE ===
RATE_LIMIT_PER_MINUTE=100
MAX_CONCURRENT_REQUESTS=50

